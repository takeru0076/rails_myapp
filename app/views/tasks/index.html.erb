<div class="container">
  <h1 class="mt-5 mb-4 text-center">Tasks</h1>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @tasks.each do |task| %>
      <div class="col">
        <div class="card h-100 border border-3 rounded-3 shadow">
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <h3 class="card-title"><%= task.title %></h3>
              <p class="card-text"><%= task.description %></p>
              <p class="card-text"><strong>Status:</strong> <%= task.completed ? 'Completed' : 'Incomplete' %></p>
            </div>
            <div class="mt-3">
              <%= link_to task_path(task), class: 'btn btn-outline-primary w-100 mb-2', title: 'Show' do %>
                <i class="bi bi-eye me-2"></i>Show
              <% end %>
              <!--<%= link_to task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger w-100', title: 'Delete' do %>-->
              <%= link_to "Delete", task, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-outline-danger w-100' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
