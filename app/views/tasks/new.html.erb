<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <h1 class="card-title mb-4 text-center">New Task</h1>
          <%= form_with(model: @task, local: true) do |form| %>
            <% if @task.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Validation errors occurred:</h4>
                <ul>
                  <% @task.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="mb-3">
              <%= form.label :title, class: "form-label" %>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter task title" %>
            </div>
            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, class: "form-control", placeholder: "Enter task description" %>
            </div>
            <div class="mb-3 form-check">
              <%= form.check_box :completed, class: "form-check-input" %>
              <%= form.label :completed, class: "form-check-label" %>
            </div>
            <div class="text-center">
              <%= form.submit 'Create Task', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
