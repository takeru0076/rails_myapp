<%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6 w-3/4 max-w-lg" ,local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <label>ユーザー登録</label>
  <div>
    <label>
      メールアドレス
    </label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "test@exeample.com" %>
  </div>
  <div>
    <label>
      ニックネーム
    </label>
    <%= f.text_field :nickname, autocomplete: "nickname", placeholder: "エンジニアの卵" %>
  </div>
  <div>
    <label>
      パスワード (6文字以上)
    </label>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "pass1234" %>
  </div>
  <div>
    <label>
      確認用パスワード
    </label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "pass1234" %>
  </div>

  <button type="submit">
    <%= f.submit "ユーザー登録" %>
  </button>
<% end %>