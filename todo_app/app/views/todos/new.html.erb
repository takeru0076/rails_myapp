<%= form_with model: @todo, class: "space-y-6 w-3/4 max-w-lg" do |f| %>
  <label class="block text-xl font-bold text-gray-700">todos</label>
  <div class="mb-4">
    <label class="form-label text-lg text-gray-700">
      title
    </label>
    <%= f.text_field :title, class: "form-control mt-1", placeholder: "Railsチュートリアル1章を完了" %>
  </div>
  <div class="text-end">
    <%= f.submit "todoを作成", class: "btn btn-primary" %>
  </div>
<% end %>
