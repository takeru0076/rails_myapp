<%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6 w-3/4 max-w-lg", local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h1 class="h3 mb-3 font-weight-normal">ユーザー登録</h1>
  <div class="form-group">
    <%= f.label :email, class: "text-md text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm", placeholder: "test@example.com" %>
  </div>
  <div class="form-group">
    <%= f.label :nickname, class: "text-md text-gray-700" %>
    <%= f.text_field :nickname, autocomplete: "nickname", class: "form-control shadow-sm", placeholder: "エンジニアの卵" %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "text-md text-gray-700" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow-sm", placeholder: "pass1234" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, class: "text-md text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow-sm", placeholder: "pass1234" %>
  </div>

  <%= f.button class: "btn btn-lg btn-primary btn-block", type: "submit" do %>
    ユーザー登録
  <% end %>
<% end %>
